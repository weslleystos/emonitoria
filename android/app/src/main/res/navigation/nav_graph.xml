<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.github.weslleystos.emonitoria.splash.ui.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/toHomeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/toSignInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/slide_left"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.github.weslleystos.emonitoria.auth.login.ui.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/toRecoveryFragment"
            app:destination="@id/recoveryFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_right" />

        <action
            android:id="@+id/toRegisterFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_right" />

        <action
            android:id="@+id/toHomeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_right"
            app:popUpTo="@+id/signInFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.github.weslleystos.emonitoria.home.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/recoveryFragment"
        android:name="com.github.weslleystos.emonitoria.auth.recovery.ui.RecoveryFragment"
        tools:layout="@layout/fragment_recovery" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.github.weslleystos.emonitoria.auth.register.ui.RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/toHomeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_right"
            app:popUpTo="@+id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>